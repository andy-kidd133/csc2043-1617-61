<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/music_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music On:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/musicOff"
        android:text="Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/music_txt"
        android:layout_alignBottom="@+id/music_txt"
        android:layout_toEndOf="@+id/musicOn"
        android:layout_marginStart="101dp"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#FFFFFF"
        android:onClick="onRadioClicked"/>

    <RadioButton
        android:id="@+id/musicOn"
        android:text="On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginStart="73dp"
        android:layout_alignBottom="@+id/music_txt"
        android:layout_toEndOf="@+id/music_txt"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#FFFFFF"
        android:onClick="onRadioClicked"/>

</RelativeLayout>