<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:focusable="true"
    android:id="@+id/mainlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unimon_bg"
    >


    <ImageView
        android:id="@+id/player1deck"
        android:layout_width="800dp"
        android:layout_height="150dp"
        android:src="@drawable/card_deck"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/card1"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card1" />


    <ImageView
        android:id="@+id/card3"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card2" />

    <ImageView
        android:id="@+id/card4"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card3" />

    <ImageView
        android:id="@+id/card6"
        android:layout_width="73dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card5"
        android:layout_marginStart="11dp" />

    <ImageView
        android:id="@+id/player2deck"
        android:layout_width="800dp"
        android:layout_height="210dp"
        android:src="@drawable/card_enemy_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />




    <ImageView
        android:id="@+id/shuffle_deck"
        android:layout_width="150dp"
        android:layout_height="100dp"
       android:src="@drawable/shuffledeck"


        android:layout_marginTop="104dp"
        android:layout_below="@+id/player2deck"
        android:layout_alignStart="@+id/card5" />

    <ImageView
        android:id="@+id/card5"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card4"
        android:layout_marginStart="11dp" />


</RelativeLayout>