<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:id="@+id/mainlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unimon_bg"
    >


    <ImageView
        android:id="@+id/player1deck"
        android:layout_width="800dp"
        android:layout_height="150dp"
        android:src="@drawable/card_deck"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/card1"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card1"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/card3"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card2"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/card4"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card3"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/card6"
        android:layout_width="73dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card5"
        android:layout_marginStart="11dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/player2deck"
        android:layout_width="800dp"
        android:layout_height="210dp"
        android:src="@drawable/card_enemy_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/card5"
        android:layout_width="71dp"
        android:layout_height="150dp"
        android:src="@drawable/deck_card"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/card4"
        android:layout_marginStart="11dp"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/pauseicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pause_button"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:contentDescription="Pause icon"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>