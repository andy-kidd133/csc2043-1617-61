<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qubbg"
    tools:context="com.example.andrew.ark9studios.activities.GameActivity">



    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="230dp"

        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/unimon_logo"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:contentDescription="Studio logo"
            android:src="@drawable/quibtig"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/startgame_button"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:contentDescription="Start Game"
            android:src="@drawable/taptostart"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="300dp"
            />


        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:contentDescription="Logout"
            android:src="@drawable/logout"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="400dp"
            />


    </RelativeLayout>




</RelativeLayout>
