<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unimon_bg"
    android:weightSum="4"
    android:padding="5dp"
    >


    <ImageView
        android:id="@+id/quit_menu"
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/quit"
        android:src="@drawable/quit_menu"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/quit_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize = "30sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        tools:ignore="RtlHardcoded" />




    <ImageView
        android:id="@+id/yes_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="Yes"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-130dp"
        android:src="@drawable/yes_button"
        tools:ignore="HardcodedText,RtlHardcoded" />


    <ImageView
        android:id="@+id/no_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-130dp"
        android:contentDescription="No"
        android:src="@drawable/no_button"
        tools:ignore="HardcodedText,RtlHardcoded" />


</FrameLayout>