<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unimon_bg"
    android:contentDescription="Main Menu Background"
    android:weightSum="5"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/main_menu"
        android:layout_width="500dp"
        android:layout_height="1200dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="Menu"
        android:src="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/scoreboard_button"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="ScoreBoard"
        android:src="@drawable/button_scoreboard"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="185dp"
        />


    <ImageView
        android:id="@+id/quit_button"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="Quit"
        android:src="@drawable/button_quit"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="185dp"
        />


    <ImageView
        android:id="@+id/rules_button"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="Rules"
        android:src="@drawable/button_rules"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="185dp"
        />

    <ImageView
        android:id="@+id/options_button"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="Options"
        android:src="@drawable/option_button"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="185dp"
 />

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="Play"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="185dp"
        android:src="@drawable/button_play_game"
 />


</RelativeLayout>